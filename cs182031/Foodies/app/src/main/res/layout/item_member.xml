<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/recyler_card"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_margin="16dp"
        android:background="#fbbc05"
        app:cardCornerRadius="16dp"
        app:cardElevation="16dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="16dp">


    </com.google.android.material.card.MaterialCardView>


    <ImageView
        android:id="@+id/recyler_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="8dp"
        android:src="@drawable/ic_recyler_image"
        android:elevation="16dp"
        app:layout_constraintBottom_toBottomOf="@id/recyler_card"
        app:layout_constraintStart_toStartOf="@id/recyler_card"
        app:layout_constraintTop_toTopOf="@id/recyler_card"/>

    <TextView
        android:id="@+id/recyler_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:layout_marginBottom="59dp"
        android:elevation="16dp"
        android:text="Sample Name"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/recyler_card"
        app:layout_constraintStart_toEndOf="@+id/recyler_image"
        app:layout_constraintTop_toTopOf="@+id/recyler_card" />

    <TextView
        android:id="@+id/recyler_description"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="16dp"
        android:text="Sample Description this dfv sklvnisfvldio sd,cnk sdkvn sdnksjd sdjcnskskdjncsksdjnvskd sknvsdjnvks sdkcsdjiv sdkcjskdnvsk sdf"
        android:textSize="16dp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@+id/recyler_image"
        app:layout_constraintEnd_toEndOf="@+id/recyler_card"
        app:layout_constraintStart_toEndOf="@+id/recyler_image"
        app:layout_constraintTop_toBottomOf="@+id/recyler_name" />

    <ImageButton
        android:id="@+id/recyler_heart"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="56dp"
        android:elevation="24dp"
        android:src="@drawable/ic_recyler_heart"
        app:layout_constraintBottom_toTopOf="@+id/recyler_name"
        app:layout_constraintEnd_toEndOf="@+id/recyler_card"
        app:layout_constraintTop_toTopOf="@+id/recyler_card"/>



    <ImageButton
        android:id="@+id/recyler_bin"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="2dp"
        android:elevation="16dp"
        android:src="@drawable/ic_recyler_bin"
        app:layout_constraintBottom_toTopOf="@+id/recyler_name"
        app:layout_constraintEnd_toEndOf="@+id/recyler_card"
        app:layout_constraintStart_toEndOf="@id/recyler_heart"
        app:layout_constraintTop_toTopOf="@+id/recyler_card" />




</androidx.constraintlayout.widget.ConstraintLayout>